<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".StudentPopupActivityAppointment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/teacher"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/tutorN"
        android:layout_width="170dp"
        android:layout_height="41dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="Tutor Name"
        android:layout_below="@+id/profilepic"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:id="@+id/tutorE"
        android:layout_width="325dp"
        android:layout_height="93dp"
        android:layout_below="@+id/tutorN"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="Tutor Experience"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Spinner
        android:id="@+id/daySpinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tutorE"/>

    <Spinner
        android:id="@+id/timeSpinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/daySpinner" />


    <Button
        android:id="@+id/sub"
        android:layout_width="202dp"
        android:layout_height="60dp"
        android:layout_below="@+id/timeSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_rounded"
        android:text="Make Appointment"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/close"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:layout_below="@+id/sub"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_rounded"
        android:text="Cancel"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"/>



    </RelativeLayout>


</ScrollView>